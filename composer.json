{
    "name": "talliesoft/momolog",
    "description": "A simple PHP debugging utility that sends variables to a Node.js debug server for real-time monitoring and analysis",
    "type": "library",
    "keywords": ["debug", "logging", "development", "monitoring", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tallie Soft",
            "email": "talliesoft@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "suggest": {
        "ext-curl": "For better performance when sending debug data"
    },
    "autoload": {
        "psr-4": {
            "MomoLog\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MomoLog\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MomoLog\\Laravel\\MomoLogServiceProvider"
            ],
            "aliases": {
                "MomoLog": "MomoLog\\Laravel\\Facades\\MomoLog"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}